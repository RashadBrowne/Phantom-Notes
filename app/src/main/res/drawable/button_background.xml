<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@integer/material_motion_duration_medium_1">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/colorAccent"/>

            <padding
                android:padding="5dp"
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"/>

            <corners android:radius="@dimen/cornerRadiusSmall" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/foregroundElevation"/>

            <padding
                android:padding="5dp"
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"/>

            <corners android:radius="@dimen/cornerRadiusSmall" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/backgroundElevation"/>

            <padding
                android:padding="5dp"
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"/>

            <corners android:radius="@dimen/cornerRadiusSmall" />
        </shape>
    </item>


</selector>