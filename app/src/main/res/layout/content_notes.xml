    <EditText
        android:id="@+id/NoteName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundElevation"
        android:ems="10"
        android:hint="@string/Access_Hint_NoteName"
        android:importantForAutofill="no"
        android:inputType="textPersonName|textCapWords"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextDimmed"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/Notes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:background="@color/backgroundElevation"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/Access_Hint_Notes"
        android:importantForAutofill="no"
        android:inputType="textCapSentences|textMultiLine"
        android:isScrollContainer="true"
        android:minHeight="48dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="50dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorTextDimmed"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoteName"
        tools:ignore="VisualLintTextFieldSize" />
